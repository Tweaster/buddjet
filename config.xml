<?xml version='1.0' encoding='utf-8'?>
<widget id="org.projectfurnace.buddjet" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Buddjet</name>
    <description>
        Budget, plan and track your expenses as well as your incomes. Organize them in categories and get statistics about your expenditure vs budget performance as well as other significant metrics over the course of time.
    </description>
    <author email="dev@projectfurnace.org" href="http://buddjet.projectfurnace.org">
        Fabrice Rasoamiaramanana
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />


    <!-- ANDROID ICONS -->

    <icon src="img/icons/icon@64x64.png" platform="android" qualifier="ldpi" />
    <icon src="img/icons/icon@180x180.png" platform="android" qualifier="mdpi" />
    <icon src="img/icons/icon@256x256.png" platform="android" qualifier="hdpi" />
    <icon src="img/icons/icon@461x461.png" platform="android" qualifier="xhdpi" />
    <icon src="img/icons/icon@512x512.png" platform="android" qualifier="xxhdpi" />




    <!-- IOS ICONS -->

    <!-- iPhone 6 / 6+ -->
    <icon src="img/icons/icon@180x180.png" platform="ios" width="180" height="180" />
    <!-- iPhone / iPod Touch  -->
    <icon src="img/icons/icon@60x60.png" platform="ios" width="60" height="60" />
    <icon src="img/icons/icon@120x120.png" platform="ios" width="120" height="120" />
    <!-- iPad -->
    <icon src="img/icons/icon@76x76.png" platform="ios" width="76" height="76" />
    <icon src="img/icons/icon@152x152.png" platform="ios" width="152" height="152" />
    <!-- Settings Icon -->
    <icon src="img/icons/icon@29x29.png" platform="ios" width="29" height="29" />
    <icon src="img/icons/icon@58x58.png" platform="ios" width="58" height="58" />
    <icon src="img/icons/icon@87x87.png" platform="ios" width="87" height="87" />
    <!-- Spotlight Icon -->
    <icon src="img/icons/icon@40x40.png" platform="ios" width="40" height="40" />
    <icon src="img/icons/icon@80x80.png" platform="ios" width="80" height="80" />
    <icon src="img/icons/icon@120x120.png" platform="ios" width="120" height="120" />


    <!-- WINDOWS ICONS -->    
    <icon platform="winphone" width="30"  height="30"  src="img/icons/icon@30x30.png" />
    <icon platform="winphone" width="44"  height="44"  src="img/icons/icon@44x44.png" />
    <icon platform="winphone" width="50"  height="50"  src="img/icons/icon@50x50.png" />
    <icon platform="winphone" width="70"  height="70"  src="img/icons/icon@70x70.png" />
    <icon platform="winphone" width="71"  height="71"  src="img/icons/icon@71x71.png" />
    <icon platform="winphone" width="106" height="106" src="img/icons/icon@106x106.png" />
    <icon platform="winphone" width="120" height="120" src="img/icons/icon@120x120.png" />
    <icon platform="winphone" width="150" height="150" src="img/icons/icon@150x150.png" />
    <icon platform="winphone" width="170" height="170" src="img/icons/icon@170x170.png" />
    <icon platform="winphone" width="310" height="310" src="img/icons/icon@310x310.png" />
    <icon platform="winphone" width="360" height="360" src="img/icons/icon@360x360.png" />

    <splash src="splash.png" />
    
    


    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
